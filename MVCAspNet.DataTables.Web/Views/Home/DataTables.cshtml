@model IEnumerable<MVCAspNet.DataTables.Web.Models.Cliente>

@{
    ViewBag.Title = "DataTables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/dataTables")
@Styles.Render("~/DataTables/css")

<h2>DataTables</h2>

<p>
    @Html.ActionLink("Criar Cliente", "Cadastrar", "Cliente")
</p>

<div>
    <h3>
        Atribuindo o plugin DataTables na Table já preenchida
    </h3>
</div>
<table class="_tbDataTables" lengthchange="false" filter="true">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fone)
            </th>
            <th sortable="false" visible="true">
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fone)
                </td>
                
                <td>

                    @Html.ActionLink("Editar", "Editar", "Cliente", new { id = item.IdCliente }, new { @class = "" }) |
                    @Html.ActionLink("Detalhe", "Detalhe", "Cliente", new { id = item.IdCliente }, new { @class = "" }) |
                    @Html.ActionLink("Delete", "Delete", "Cliente", new { id = item.IdCliente }, new { @class = "" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    </tbody>
</table>